<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
	  <%= f.label :password %><br />
	  <%= f.password_field :password %>
  </div>
  <div class="field">
	  <%= f.label :password_confirmation, "Confirmation" %><br />
	  <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
